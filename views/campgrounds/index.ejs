<% layout("layouts/boilerplate")%>
    <div id='map' style='width: 100%; height: 500px;'></div>
    <h2 class="mt-5 mb-5 text-center">All CampGrounds</h2>
    <% for(let c of camps){ %>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <% if(c.images.length> 1){ %>
                        <img src="<%= c.images[0].thumbnail1 %> " alt="" class="img-fluid">
                        <% }else {%>
                            <img class="img-fluid" width="500" height="288"
                                src="https://upload.wikimedia.org/wikipedia/commons/thumb/6/6c/No_image_3x4.svg/1280px-No_image_3x4.svg.png"
                                alt="">
                            <%}%>
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%=c.title%>
                        </h5>
                        <p class="card-text">
                            <%=c.description%>
                        </p>
                        <p class="card-text">
                            <small class="tex-muted">
                                <%= c.location %>
                            </small>
                        </p>
                        <a href="/campgrounds/<%= c._id %> " class="btn btn-primary">View</a>

                    </div>
                </div>
            </div>
        </div>
        <% } %>
            <script>
                const mapToken = '<%-process.env.MAPBOX_TOKEN %>'
                const campgrounds = { features: JSON.parse('<%- JSON.stringify(camps) %>') }
            </script>
            <script src="/javascript/clusterMap.js"></script>